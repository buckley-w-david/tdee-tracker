<style>
  .days .day:not(:last-of-type) {
    border-bottom: 1px solid #ccc;
  }
</style>
<div class="days">
  <% @meals.group_by(&:day_id).each do |_day_id, meals| %>
    <div class="day p-3">
      <h2><%= meals.first.day_date %></h2>
      <% meals.each do |meal| %>
        <%= link_to(new_day_meal_path(@day, source_id: meal.id)) do %>
          <% meal.name %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="mt-3">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
