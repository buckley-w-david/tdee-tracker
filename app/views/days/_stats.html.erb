<%= turbo_frame_tag "stats" do %>
  <div class="border rounded p-3">
    <%= line_chart(
      [{
        name: "kcal",
        data: @kilocalories,
      },
      {
        name: "TDEE",
        data: @tdee,
      }],
      min: nil,
      ytitle: "TDEE (kcal)",
      download: true,
      id: "tdee_chart",
    ) %>
  </div>
  <div class="border rounded p-3 mt-2">
    <%= line_chart(
      [{
        name: "Weight",
        data: @weight,
      },
      {
        name: "EMA",
        data: @ema,
      }],
      min: nil,
      ytitle: "Weight (lbs)",
      download: true,
      id: "weight_chart",
    ) %>
  </div>
  <% if @steps_by_day.present? %>
    <div class="border rounded p-3 mt-2">
      <%= column_chart(
        [{
          name: "Steps",
          data: @steps_by_day,
        }],
        min: nil,
        ytitle: "Steps",
        download: true,
        id: "steps_chart",
      ) %>
    </div>
  <% end %>
<% end %>
